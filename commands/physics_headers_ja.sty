% 原理 Principle
\NewDocumentCommand{\Principle}{D<>{} O{}}{%
  \textgt{%
    \colorbox[rgb]{0.67,1.00,0.85}{\,原理\,}%
    \ifthenelse{\equal{#1}{}}{}{\,\,\,\textsf{{#1}}} % if 第1引数（番号）について
    \ifthenelse{\equal{#2}{}}{}{#2} % if 第2引数（内容）について
  }
}

